<%= form_for(:product, url: products_path) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :category %>
  <%= f.collection_select  :category_id, Category.all, :id, :name %>
  <%= f.label :category %>

  <%= f.submit "Create Product" %>
<% end %>
