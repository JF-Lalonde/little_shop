<% @shopping_cart.show_products.each do |product, count| %>
  <span class="thumbnail-custom"><%= image_tag(product.image_path)%></span>
  Name: <%= product.name %>
  Description: <%= product.description %>
  Price: <%= product.price %>
  Item Total: <%= count %>


  <%= button_to "Remove Product", update_cart_path(product_id: product.id), method: :put, class: "btn btn-success" %>
<% end %>
</br>
Cart Total: <%= @shopping_cart.total_price %>
