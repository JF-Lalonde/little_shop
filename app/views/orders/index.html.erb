<div class="container">
  <div class="row">
    <h1>Your Order History</h1>
    <div class="col-md-3">
      <ul class="list-group"><% @orders.each do |order| %>
        <li class="list-group-item">View order: <%= link_to "#{order.id}", order_path(order) %><br>
          Order Created: <%= order.created_at.strftime("%b. %d, %Y") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
