<%= @order.user.username %>
<%= @order.id %>
<%= @order.created_at %>
<%= @order.user.full_name %>
<%= @order.user.address %>
<%= @order.status %>
<% @order.products.uniq.each_with_index do |product, index| %>
  <%= link_to product.name, product_path(product) %>
  <%= product.price %>
  <%= @order.quantity[product.id] %>  
  <%= @order.line_total[index] %>
<% end %>
<%= @order.total_price %>

